@{
    Layout = null;
}
<style>
    body{
        width:100%;
    }
</style>
<form class="container" asp-action="Snimi" method="post">
    <fieldset >

        <legend style="text-align:center;margin-bottom:35px;">Login</legend>
        <div style="margin-right:30px">
            <div class="form-group  ">
                <label>Username</label>
                <input type="text" class="form-control" placeholder="Enter username" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="text" class="form-control" placeholder="Enter password" />
            </div>
            <button class="btn btn-danger">Submit</button><br/>
            <span class="alert-link" style="float:right;cursor:pointer;color:Highlight">Forgot password ?</span>
</fieldset>
</form>