@{
    Layout = null;
}
<style>
    .Podaci {
        width: 60%;
        padding: 30px;
        border:1px solid black;
        border-radius:20px;
        margin-bottom:20px;
    }
        .Podaci div {
            margin-bottom: 5px;
        }

    .PrebivalisteSkolovanje{
        width:35%;
    }
</style>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<button class="btn btn-light" onclick="window.location='/'"><--</button>
<form class="container">
    <fieldset class="d-flex small Podaci">
        <legend style="font-size:20px;width:120px;text-align:center">Lični podaci</legend>
        <div style="margin-right:30px">
            <div class="form-group  ">
                <label>Ime</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
            <div class="form-group">
                <label>Prezime</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
            <div class="form-group">
                <label>Ime Oca</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
            <div class="form-group">
                <label>Mjesto Rodjenja</label>
                <input type="text" class="form-control form-control-sm" />
            </div>

            <div class="form-group">
                <label>Zanimanje roditelja</label>
                <input type="text" class="form-control form-control-sm" />
            </div>

            <div class="form-group">
                <label>Pol</label>
                <input type="text" class="form-control form-control-sm" />
            </div>

        </div>
        <div>
            <div class="form-group">
                <label>JMBG</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
            <div class="form-group">
                <label>Lična karta</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
            <div class="form-group">
                <label>Datum Rodjenja</label>
                <input type="date" class="form-control form-control-sm" />
            </div>
            <div class="form-group">
                <label>Mobitel</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control form-control-sm" />
            </div>


        </div>

    </fieldset>

    <fieldset class="d-flex small Podaci PrebivalisteSkolovanje">
        <legend style="font-size:20px;width:120px;text-align:center">Prebivaliste</legend>
        <div style="margin-right:30px">
            <div class="form-group  ">
                <label>Adresa</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
            <div class="form-group">
                <label>Opstina</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
        </div>
        <div>
            <div class="form-group">
                <label>Kanton</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
        </div>

    </fieldset>

    <fieldset class="d-flex small Podaci PrebivalisteSkolovanje">
        <legend style="font-size:20px;width:120px;text-align:center">Školovanje</legend>
        <div style="margin-right:30px">
            <div class="form-group  ">
                <label>Fakultet</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
            <div class="form-group">
                <label>Tip Kandidata</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
            <div class="form-group">
                <label>Broj Indeksa</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
        </div>
        <div>
            <div class="form-group">
                <label>Ciklus studija</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
            <div class="form-group">
                <label>Godina studija</label>
                <input type="text" class="form-control form-control-sm" />
            </div>
        </div>

    </fieldset>
    <input type="submit" class="btn btn-danger" value="Submit" />
</form>